<?xml version="1.0" encoding="utf-8" ?>
<rules>
    <rule>
        <if>
            <attribute name="Arguments" value="[MoneySold, UnitsSold]"/>
            <attribute name="Condition" value="MoneySold / UnitsSold < 100" />
        </if>
        <then>
            <attribute name="Solution" value="Необходимо поднять цену на товар"/>
        </then>
    </rule>  
</rules>