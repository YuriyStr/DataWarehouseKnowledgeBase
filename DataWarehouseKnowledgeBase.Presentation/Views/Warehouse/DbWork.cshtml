
@{
    ViewData["Title"] = "Работа с БД";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("DbWork", "Warehouse", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                @Html.Label("ProductCode", "Код товара", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBox("ProductCode", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("StoreCode", "Код магазина", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBox("StoreCode", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Price", "Стоимость", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBox("Price", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Подтвердить" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>

<p>@ViewBag.Message</p>